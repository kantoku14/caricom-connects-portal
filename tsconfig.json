{
  "compilerOptions": {
    "target": "es2020",                                // Ensure a modern target for import.meta
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",                                // Ensure module is compatible with import.meta
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": [
    "src", 
    "src/__tests__", 
    "jest.config.ts",
    "jest.setup.ts",
    "__mocks__"
  ],
  "exclude": ["node_modules", "dist"]
}
