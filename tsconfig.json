{
  "compilerOptions": {
    "target": "es5",                                // Use a compatible target version
    "lib": ["dom", "dom.iterable", "esnext"],       // Include DOM and ES features
    "allowJs": true,                                // Allow JavaScript files
    "skipLibCheck": true,                           // Skip type checks for libraries
    "esModuleInterop": true,                        // Enable compatibility with ES modules
    "allowSyntheticDefaultImports": true,           // Allow default imports
    "strict": true,                                 // Enable strict type checking
    "forceConsistentCasingInFileNames": true,       // Ensure file name casing consistency
    "module": "esnext",                             // Use ESNext modules
    "moduleResolution": "node",                     // Resolve modules like Node.js
    "resolveJsonModule": true,                      // Allow importing .json files
    "isolatedModules": true,                        // Isolate transpiled modules
    "jsx": "react-jsx",                             // Use JSX with React (React 17+)
    "noEmit": true                                  // Don't emit JavaScript files
  },
  "include": [
    "src", 
    "src/__tests__", 
    "jest.config.ts",
    "jest.setup.ts"
, "__mocks__"  ],                                                // Include src, tests, and jest config/setup
  "exclude": ["node_modules", "dist"]               // Exclude node_modules and dist folders
}
