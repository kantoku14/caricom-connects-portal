# .husky/pre-push
#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run ESLint for linting
npm run lint
if [ $? -ne 0 ]; then
  echo "Linting failed. Fix the errors before pushing."
  exit 1
fi

# Run Prettier for formatting
npm run format
if [ $? -ne 0 ]; then
  echo "Formatting failed. Fix the errors before pushing."
  exit 1
fi

# Run TypeScript type-checking
npm run type-check
if [ $? -ne 0 ]; then
  echo "TypeScript type-checking failed. Fix the errors before pushing."
  exit 1
fi

# Run tests
npm run test
if [ $? -ne 0 ]; then
  echo "Tests failed. Fix the errors before pushing."
  exit 1
fi

echo "All checks passed. Proceeding with push."
